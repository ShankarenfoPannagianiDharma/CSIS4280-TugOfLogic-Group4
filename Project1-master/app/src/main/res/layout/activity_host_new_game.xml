<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".HostNewGame">

    <TextView
        android:id="@+id/wel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="HOSTING GAME"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Enter Username and Main Claim"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/HostingNew_HostName_txt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Username"
        android:layout_below="@+id/des"
        android:layout_marginTop="40dp"
        android:inputType="text"
        android:gravity="center"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/HostingNew_MainClaim_txt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Main Claim"
        android:layout_below="@+id/HostingNew_HostName_txt"
        android:layout_marginTop="40dp"
        android:inputType="text"
        android:gravity="center"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/HostingNew_Confirm_btn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/HostingNew_MainClaim_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:text="Confirm"
        android:textColor="@color/red" />


